{% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    <div class="container">
        <div class="card-body">
            {% if app.user != null %}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            {%endif%}
            <hr>
            <a href="/categories">Go Back</a>
        </div>

        {% if app.user == null %}
            <a href="{{ path('app_login') }}" class="btn btn-info"> You need to login to edit a category</a>
        {% endif %}



    </div>


{% endblock %}